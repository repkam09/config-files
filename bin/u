#!/bin/bash
BASE=`echo "$(lsb_release -is)"`

# Framework Laptop and Workstation
if [ $BASE == "Ubuntu" ]
then
sudo apt update -q
sudo apt upgrade --yes -q
sudo apt autoremove --yes -q
fi


# Pinebook Pro
if [ $BASE == "Manjaro-ARM" ]
then
sudo pacman -Syu 
fi

# Other
if [ $BASE == "Manjaro" ]
then
sudo pacman -Syu 
fi
